<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.alerts.AlertsFragment"
    android:background="#F9FAFB">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Alerts"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="8dp">

            <!-- Alert 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨ SOS Alert: Accident near MG Road"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 10:42 AM | Distance: 0.8 km"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <!-- Alert 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Flood Alert: Rising water levels in River Area"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 09:15 AM | Distance: 2.3 km"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

            <!-- Alert 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Fire Alert: Reported near Industrial Area"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 08:30 AM | Distance: 1.5 km"
                    android:textSize="14sp"
                    android:textColor="#555555" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

