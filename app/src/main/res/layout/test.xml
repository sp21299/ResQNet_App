<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cool_gray">

    <!-- Optional Title -->
    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ResQNet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 2x2 Grid Buttons -->
    <!-- Home Button -->

    <!-- Alerts Button -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="424dp"
        android:background="@drawable/home_bg"
        android:drawableTop="@drawable/home_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        android:paddingTop="12dp"
        android:text="@string/home"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/alertButton"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeTitle"
        app:layout_constraintWidth_percent="0.45" />

    <!-- Chat Button -->

    <!-- Map Button -->
    <Button
        android:id="@+id/alertButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/home_bg"
        android:drawableTop="@drawable/alert"
        android:paddingTop="12dp"
        android:text="@string/alerts"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toEndOf="@id/homeButton"
        app:layout_constraintTop_toTopOf="@id/homeButton"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/home_bg"
        android:backgroundTint="@null"
        android:drawableTop="@drawable/chat_24dp_e3e3e3_fill0_wght400_grad0_opsz24"
        android:paddingTop="12dp"
        android:text="@string/chat"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/mapButton"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeButton"
        app:layout_constraintWidth_percent="0.45" />

    <!-- Large SOS Button -->

    <!-- Add Alert Button -->

    <Button
        android:id="@+id/mapButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/home_bg"
        android:drawableTop="@drawable/map"
        android:paddingTop="12dp"
        android:text="@string/map"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintStart_toEndOf="@id/chatButton"
        app:layout_constraintTop_toTopOf="@id/chatButton"
        app:layout_constraintWidth_percent="0.45" />

    <Button
        android:id="@+id/sosButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/sos_button"
        android:elevation="10dp"
        android:text="@string/emergency_n_sos"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatButton"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/add_alert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_bg"
        android:text="@string/add_alert"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/see_sos"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.15"
        android:layout_margin="8dp"/>

    <!-- View SOS Button -->
    <Button
        android:id="@+id/see_sos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_bg"
        android:text="@string/view_sos"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/add_alert"
        app:layout_constraintStart_toEndOf="@id/add_alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.15"
        android:layout_margin="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
