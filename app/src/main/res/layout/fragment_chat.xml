<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F2F2F2"
    tools:context=".ui.chat.ChatFragment">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Community Chat"
        android:textStyle="bold"
        android:textSize="22sp"
        android:gravity="center"
        android:paddingBottom="10dp" />

    <!-- Chat messages area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Message from others -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="start"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#E8EAF6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§â€â™‚ï¸ Riya: Is anyone near the bridge? Flood warning issued!"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Message from user -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DCF8C6"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end"
                android:layout_marginStart="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shravani: Yes, Iâ€™m nearby and can help!"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Another incoming message -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="start"
                android:layout_marginEnd="60dp"
                android:backgroundTint="#E8EAF6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš‘ Raj: Iâ€™ve informed rescue team!"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Input section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message..."
            android:padding="10dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:background="@android:color/transparent"
            android:contentDescription="Send" />
    </LinearLayout>
</LinearLayout>

