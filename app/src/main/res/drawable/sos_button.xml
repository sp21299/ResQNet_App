<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#C43232"
                android:centerColor="#FF6A6A"
                android:endColor="#C43232"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Inner Circle -->
    <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
        <shape android:shape="oval">
            <solid android:color="#C43232"/>
            <stroke
                android:width="4dp"
                android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>


